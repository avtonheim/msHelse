<Page loaded="onLoad">
  <Page.actionBar>
       <ActionBar class="action-bar">
         <StackLayout>
            <Image src="~/images/tittel.png" class="iconTitle" android.position="actionBar" ios.position="center"></Image>
         </StackLayout>
       </ActionBar>
   </Page.actionBar>
   <ScrollView>
   <StackLayout class="p-10" >
     <Label class="h1" text="Graf over dagbok"></Label>
     <Label class="body" textWrap="true" text="Dette er ein oversikt over dine symptom og dagsform."></Label>

     <StackLayout class="graphContainer">
       <Label class="h2" text="Symptom"></Label>
       <StackLayout id="symptomTextVisual">
       </StackLayout>
  <ScrollView orientation="horizontal">
    <GridLayout columns="350,350" rows="*">
       <StackLayout col="0" row="0" id="symptomGraph"></StackLayout>
      <StackLayout col="1" row="0" id="detailedGraph"></StackLayout>
      </GridLayout>
    </ScrollView>
      <StackLayout orientation="horizontal" horizontalAlignment="center">
      <Image src="~/images/swipe.png" height="70px" width="70px"/>
      <Label class="textInBox" text="Sveip for Ã¥ vise ein detaljert oversikt!" textWrap="true"></Label>
    </StackLayout>
    </StackLayout>

     <StackLayout class="graphContainer">
      <Label class="h2" text="Dagsform"></Label>

      <StackLayout id="moodTextVisual">
      </StackLayout>
      <Label class="textInBox" textWrap="true" text="Oversikt den siste veka."></Label>
      <StackLayout id="moodGraph">
      </StackLayout>
    </StackLayout>
</StackLayout>
</ScrollView>
</Page>
