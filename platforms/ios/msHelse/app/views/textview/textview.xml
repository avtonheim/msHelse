<Page loaded="onLoad">
  <Page.actionBar>
       <ActionBar class="action-bar">
         <StackLayout>
            <Image src="~/images/tittel.png" class="iconTitle" android.position="actionBar" ios.position="center"></Image>
         </StackLayout>
       </ActionBar>
   </Page.actionBar>
      <StackLayout>
        <StackLayout class="p-20">
           <Label class="h1" text="Totaloversikt"></Label>
           <Label class="body" textWrap="true" text="De nyeste vises fÃ¸rst."></Label>
        </StackLayout>
     <StackLayout>
           <ListView items="{{ Texts }}" style="height: 100%;">
