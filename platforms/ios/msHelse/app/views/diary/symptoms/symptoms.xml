<Page navigatingTo="onNavigatingTo">
  <Page.actionBar>
         <ActionBar title="mHelse" class="action-bar">
           <StackLayout>
              <Image src="~/images/tittel.png" class="iconTitle" android.position="actionBar" ios.position="center"></Image>
           </StackLayout>
           <ActionItem text="Neste" tap="onNavText" ios.position="right"/>
           <ActionItem text="Avbryt" tap="tapHome" ios.position="left"/>
         </ActionBar>
     </Page.actionBar>
  <ScrollView>
    <StackLayout class="diaryComp" id="uiFix" loaded="loaded">
       <Progress value="66"/>
      <Label class="titleMain" text="Kva har prega deg sidan sist registrering?" textWrap="true"/>
      <Label class="body" text="Trykk på eit kort for å utvide" textWrap="true"/>

      <StackLayout class="symptomCont" id="firstElement">
        <Label class="symptomHead" text="Legg til eit nytt symptom"/>
        <Label class="body" text="{{ showDetails0 ? 'Klikk for å utvide' : 'Lukk' }}" tap="toggle0"/>
        <StackLayout visibility="{{ showDetails0 ? 'collapsed' : 'visible' }}">
          <TextField id="inputSelf" hint="Klikk for å legge til eit anna symptom" autocorrect="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" text="Morgon"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" text="Dag"></Button>
            <Button class="eventBtn" col="2" row="0" value="1" text="Kveld"></Button>
          </GridLayout>
        </StackLayout>
      </StackLayout>

      <StackLayout class="symptomCont">
        <Label class="symptomHead" text="Vannlatning"/>
        <Label class="body" text="{{ showDetails1 ? 'Klikk for å utvide' : 'Lukk' }}" tap="toggle1"/>
        <StackLayout class="symtomDetails" visibility="{{ showDetails1 ? 'collapsed' : 'visible' }}">
          <Label class="specQuestion" text="Hadde du problem med å tisse når du var på do?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" context="Vannlatning" text="Ja"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" context="Vannlatning" text="Nei"></Button>
          </GridLayout>
          <Label class="specQuestion" text="Hadde du problem med å kjenne når du måtte på do?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" context="Vannlatning" text="Ja"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" context="Vannlatning" text="Nei"></Button>
          </GridLayout>
          <Label class="specQuestion" text="Når på dagen hadde du problemet?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" context="Vannlatning" text="Morgon"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" context="Vannlatning" text="Dag"></Button>
            <Button class="eventBtn" col="2" row="0" value="1" context="Vannlatning" text="Kveld"></Button>
          </GridLayout>
        </StackLayout>
      </StackLayout>

      <StackLayout class="symptomCont" >
        <Label class="symptomHead" text="Søvnproblem"/>
        <Label class="body" text="{{ showDetails2 ? 'Klikk for å utvide' : 'Lukk' }}" tap="toggle2"/>
        <StackLayout class="symtomDetails" visibility="{{ showDetails2 ? 'collapsed' : 'visible' }}">
          <Label class="specQuestion" text="Hadde du problem med å sove?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" text="Ja"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" text="Nei"></Button>
          </GridLayout>
          <Label class="specQuestion" text="Hadde du problem med å sove for lenge?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" text="Ja"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" text="Nei"></Button>
          </GridLayout>
          <Label class="specQuestion" text="Når på dagen hadde du problemet?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" context="Søvnproblem" text="Morgon"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" context="Søvnproblem" text="Dag"></Button>
            <Button class="eventBtn" col="2" row="0" value="1" context="Søvnproblem" text="Kveld"></Button>
          </GridLayout>
        </StackLayout>
      </StackLayout>

      <StackLayout class="symptomCont">
        <Label class="symptomHead" text="Ereksjonsproblem"/>
        <Label class="body" text="{{ showDetails3 ? 'Klikk for å utvide' : 'Lukk' }}" tap="toggle3"/>
        <StackLayout class="symtomDetails" visibility="{{ showDetails3 ? 'collapsed' : 'visible' }}">
          <Label class="specQuestion" text="Hadde du problem med å få ereksjon?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" text="Ja"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" text="Nei"></Button>
          </GridLayout>
          <Label class="specQuestion" text="Når på dagen hadde du problemet?" textWrap="true"/>
          <GridLayout columns="*,*,*" rows="*">
            <Button class="eventBtn" col="0" row="0" value="1" context="Ereksjonsproblem" text="Morgon"></Button>
            <Button class="eventBtn" col="1" row="0" value="1" context="Ereksjonsproblem" text="Dag"></Button>
            <Button class="eventBtn" col="2" row="0" value="1" context="Ereksjonsproblem" text="Kveld"></Button>
          </GridLayout>
      </StackLayout>
      </StackLayout>

      <StackLayout class="symptomCont">
        <Label class="symptomHead" text="Fatigue"/>
        <Label class="body" text="{{ showDetails4 ? 'Klikk for å utvide' : 'Lukk' }}" tap="toggle4"/>
          <StackLayout class="symtomDetails" visibility="{{ showDetails4 ? 'collapsed' : 'visible' }}">
            <Label class="specQuestion" text="Fekk du Fatigue etter å ha utført ein krevjande aktivitet?" textWrap="true"/>
            <GridLayout columns="*,*,*" rows="*">
              <Button class="eventBtn" col="0" row="0" value="1" text="Ja"></Button>
              <Button class="eventBtn" col="1" row="0" value="1" text="Nei"></Button>
            </GridLayout>
            <Label class="specQuestion" text="Fekk du Fatigue etter normal aktivitet? (Til dømes gått tur)" textWrap="true"/>
            <GridLayout columns="*,*,*" rows="*">
              <Button class="eventBtn" col="0" row="0" value="1" text="Ja"></Button>
              <Button class="eventBtn" col="1" row="0" value="1" text="Nei"></Button>
            </GridLayout>
            <Label class="specQuestion" text="Når på dagen hadde du problemet?" textWrap="true"/>
            <GridLayout columns="*,*,*" rows="*">
              <Button class="eventBtn" col="0" row="0" context="Fatigue" value="1" text="Morgon"></Button>
              <Button class="eventBtn" col="1" row="0" context="Fatigue" value="1" text="Dag"></Button>
              <Button class="eventBtn" col="2" row="0" context="Fatigue" value="1" text="Kveld"></Button>
            </GridLayout>
        </StackLayout>
      </StackLayout>

    </StackLayout>
</ScrollView>
</Page>
