<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
        <ActionBar title="msHelse" class="action-bar">
            <ActionBar.actionItems>
                <ActionItem text="Ny" tap="{{ insert }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
      <Progress value="70"/>
      <Label class="content" text="Todo!" style="font-weight: bold;"/>
      <Label class="content" text="Legg inn dine gjøremål for morgondagen. Maks fem gjøremål!" textWrap="true"/>
      <ListView items="{{ lists }}" id="listContainer">
          <ListView.itemTemplate>
              <StackLayout class="listItem">
                  <Label class="listItems" text="{{ list_name }}" />
              </StackLayout>
          </ListView.itemTemplate>
      </ListView>
      <Button class="deleteItem" text="Slett alt" tap="{{ delete }}" />
      <Button class="nxtBtn" text="Neste" tap="navText"/>
  </StackLayout>
</Page>
