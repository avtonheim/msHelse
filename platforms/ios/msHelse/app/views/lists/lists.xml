<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
        <ActionBar class="action-bar">
          <StackLayout>
             <Image src="~/images/tittel.png" class="iconTitle" android.position="actionBar" ios.position="center"></Image>
          </StackLayout>
            <ActionBar.actionItems>
                <ActionItem text="Ny" tap="{{ insert }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
        <ListView items="{{ lists }}" class="listLayout">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal" class="list-view-item">
                    <Label text="[ ]" tap="markDone"/>
                    <Label text="{{ list_name }}" class="listItems"/>
                    <Label id="remove" text="X" tap="remove"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
</Page>
