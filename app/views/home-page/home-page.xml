<Page>
  <Page.actionBar>
         <ActionBar class="action-bar">
           <StackLayout>
              <Image src="~/images/tittel.png" class="iconTitle" ios.position="center"></Image>
           </StackLayout>
         </ActionBar>
     </Page.actionBar>
<StackLayout class="content">

    <StackLayout orientation="horizontal" horizontalAlignment="center" class="homeBox" id="diary" tap="tapDiary">
      <Image src="~/images/dagbok_ny.png" height="200px" width="200px"/>
      <Label text="Min MS Dagbok"/>
    </StackLayout>

    <StackLayout orientation="horizontal" horizontalAlignment="center" class="homeBox" id="visual" tap="tapVisual">
          <Image src="~/images/analyse_ny.png" height="150px" width="150px"/>
          <Label text="Analyse av dagsform"/>
    </StackLayout>

  <GridLayout columns="*,*" row="*">
    <StackLayout col="0" row="0" class="smallBox" tap="onTap">
      <Image src="~/images/ovelse_ny.png" height="150px" width="150px"/>
      <Label text="Start ei Ã¸ving!" textWrap="true"/>
    </StackLayout>

    <StackLayout col="1" row="0" class="smallBox" tap="tapTodo">
      <Image src="~/images/gjoremal_ny.png" height="150px" width="150px"/>
      <Label text="Planlegg noko kjekt!" textWrap="true"/>
    </StackLayout>
  </GridLayout>

</StackLayout>
</Page>
