<Page loaded="onLoaded">
  <Page.actionBar>
         <ActionBar title="mHelse" class="action-bar">
           <StackLayout orientation="horizontal">
              <Image src="~/images/tittel.png" class="iconTitle" ios.position="center"></Image>
            </StackLayout>
             <ActionItem text="Fullfør" tap="finishDiary" ios.position="right"/>
         </ActionBar>
     </Page.actionBar>
     <StackLayout>
       <Progress value="{{ someProperty }}"/>
       <StackLayout class="p-20">
           <StackLayout class="question" horizontalAlignment="left">
             <Label text="Kva har vore bra med dagen?"></Label>
           </StackLayout>
          <StackLayout class="response" horizontalAlignment="right">
              <TextView id="subject" hint="Klikk for å legge til tekst" text="{{ textItem }}" textWrap="true" autocorrect="true"/>
          </StackLayout>
          <StackLayout>
            <Button text="console.log" tap="{{ select }}"/>
            <Button text="Lagre" tap="{{ insert }}"/>
          </StackLayout>
      </StackLayout>
    </StackLayout>
</Page>
