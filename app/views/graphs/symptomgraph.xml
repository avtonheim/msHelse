  <StackLayout loaded="pageLoaded"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:chart="nativescript-pro-ui/chart">
<chart:RadCartesianChart class="graphBox" height="350">
      <chart:RadCartesianChart.series>
        <chart:BarSeries seriesName="Symptoms"
          selectionMode="DataPointMultiple"
          outerRadiusFactor="0.8"
          expandRadius="0.2"
          items="{{ Symptoms }}"
          categoryProperty="type"
          valueProperty="count"
          stackMode="stack100"
          showLabels="true">
          <chart:BarSeries.labelStyle>
            <chart:PointLabelStyle margin="10" fontStyle="Bold" textSize="20" textColor="White" />
          </chart:BarSeries.labelStyle>
          <chart:BarSeries.horizontalAxis>
            <chart:LinearAxis majorStep="1" labelFitMode="Rotate"/>
          </chart:BarSeries.horizontalAxis>
          <chart:BarSeries.verticalAxis>
            <chart:CategoricalAxis/>
          </chart:BarSeries.verticalAxis>
        </chart:BarSeries>

        <!--Use a new graph over this graph to show morning/evening events-->
        <!--styling-->
        <chart:RadCartesianChart.palettes>
          <chart:Palette seriesName="Symptoms">
            <chart:Palette.entries>
            <chart:PaletteEntry strokeColor="#8060B3FC" fillColor="#8060B3FC"/>
          </chart:Palette.entries>
        </chart:Palette>
      </chart:RadCartesianChart.palettes>
      </chart:RadCartesianChart.series>
    </chart:RadCartesianChart>
  </StackLayout>

