<Page loaded="pageLoaded">
  <Page.actionBar>
         <ActionBar class="action-bar">
           <StackLayout>
              <Image src="~/images/tittel.png" class="iconTitle" ios.position="center"></Image>
           </StackLayout>
         </ActionBar>
     </Page.actionBar>
    <StackLayout class="content">
    <Label class="titleMain" text="Mindfullness" style="font-size: 35pt;"/>
    <Button class="navButton" style="width:320px; height: 100px; background-color: #DD7893;" text="Stopp øving" tap="stopMind"> </Button>

    <StackLayout id="sunFlower">
        <Image id="view" src="~/images/sunflower.png" tap="startMind"></Image>
    </StackLayout>
    <Label style="margin-top: 40px; font-size: 13pt; font-style: italic; " text="Klikk på blomsten for å starte"/>
    </StackLayout>
</Page>
