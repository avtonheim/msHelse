<Page loaded="onLoad">
  <Page.actionBar>
       <ActionBar class="action-bar">
         <StackLayout>
            <Image src="~/images/tittel.png" class="iconTitle" ios.position="center"></Image>
         </StackLayout>
       </ActionBar>
   </Page.actionBar>
      <StackLayout class="p-20">
     <Label class="h1" text="Denne veka"></Label>
     <Label class="body" textWrap="true" text="Dette er ein oversikt over denne veka (dato)."></Label>

     <StackLayout>
         <StackLayout class="question" horizontalAlignment="left">
           <Label text="Kva har vore bra med dagen?"></Label>
         </StackLayout>
         <StackLayout>
              <ListView items="{{ specificText }}" style="height: 900px;">
                <ListView.itemTemplate>
                  <StackLayout class="response" horizontalAlignment="right">
                    <Label height="200px" text="{{ content }}" textWrap="true"/>
                    <Label text="{{ date }}"/>
                  </StackLayout>
                </ListView.itemTemplate>
              </ListView>
        </StackLayout>
      </StackLayout>
</StackLayout>
</Page>
