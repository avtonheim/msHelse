<Page loaded="onLoaded">
  <Page.actionBar>
         <ActionBar class="action-bar">
           <StackLayout>
              <Image src="~/images/tittel.png" class="iconTitle" ios.position="center"></Image>
           </StackLayout>
         </ActionBar>
     </Page.actionBar>
     <StackLayout>
       <GridLayout class="graph" rows="*" columns="*" width="auto" height="200">
       <Label class="title" text="Visualisering av dagbok"/>
     </GridLayout>
      <GridLayout rows="*,*" columns="*,*" width="auto" height="300">
        <StackLayout class="tile" row="0" col="0">
          <Label text="Korleis har du det?"/>
        </StackLayout>
        <StackLayout class="tile" row="0" col="1">

          <ListView>
          <ListView.itemTemplate>
              <StackLayout>
                  <Label text="{{ amount }}"/>
              </StackLayout>
          </ListView.itemTemplate>
          </ListView>
          <Label text="Symptoms" tap="{{ showAmountFatigue }}"/>
          <Label text="console" tap="{{ select }}"/>
        </StackLayout>
        <StackLayout class="tile" row="1" col="0">
          <Label text="Tekst"/>
        </StackLayout>
        <StackLayout class="tile" row="1" col="1">
          <Label text="Fullførte gjøremål"/>
        </StackLayout>
      </GridLayout>
    </StackLayout>
</Page>
