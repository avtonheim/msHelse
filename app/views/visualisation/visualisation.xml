<Page loaded="onLoad">
  <Page.actionBar>
       <ActionBar class="action-bar">
         <StackLayout>
            <Image src="~/images/tittel.png" class="iconTitle" android.position="actionBar" ios.position="center"></Image>
         </StackLayout>
       </ActionBar>
   </Page.actionBar>
   <ScrollView>
   <StackLayout class="p-20" >
     <Label class="h1" text="Graf over dagbok"></Label>
     <Label class="body" textWrap="true" text="Dette er ein oversikt over dine symptom og dagsform."></Label>

     <StackLayout class="graphContainer">
       <Label class="h2" text="Symptom"></Label>
       <Label class="textExpl" textWrap="true" text="Denne veka ha symptom xx vore mest framtredande med xx om morgonen og xx om kvelden."></Label>
       <Label class="textInBox" textWrap="true" text="Dei siste 7 dagane."></Label>
       <StackLayout id="symptomGraph">
      </StackLayout>
    </StackLayout>

     <StackLayout class="graphContainer">
      <Label class="h2" text="Dagsform"></Label>

      <ListView style="height: 200px;" isUserInteractionEnabled="false" items="{{ SelectMoodWeekly }}">
          <ListView.itemTemplate>
              <StackLayout class="graphBox">
                  <Label class="textExpl" text="{{'I den siste veka har du hatt det ' + average + ' i gjennomsnitt. 0 betyr elendig, 5 betyr middels og 10 betyr bra.'}}"  textWrap="true"/>
              </StackLayout>
          </ListView.itemTemplate>
      </ListView>
      <StackLayout id="moodGraph">
      </StackLayout>
    </StackLayout>
</StackLayout>
</ScrollView>
</Page>
